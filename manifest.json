{
  "manifest_version": 2,
  "name": "WittyTV Fixer",
  "version": "1.0",
  "permissions": 
  [
    "tabs",
    "*://www.video.mediaset.it/*"
  ],
  "content_scripts": 
  [{
    "matches": ["*://www.video.mediaset.it/*"],
    "js": ["jquery-2.1.3.min.js", "extension.js"],
    "all_frames": true
  }],
  "page_action": 
  {
    "default_title": "WittyTV Fixer",
    "default_icon": "WittyTV_logo.png"
  },
  "icons": 
  { 
    "16": "WittyTV_logo.png",
    "48": "WittyTV_logo.png",
    "128": "WittyTV_logo.png" 
  },
  "background": 
  {
    "scripts": ["bootstrap.js"],
    "persistent": false
  }
}